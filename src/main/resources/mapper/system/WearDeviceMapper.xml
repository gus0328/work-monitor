<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iccm.system.mapper.WearDeviceMapper">
    
    <resultMap type="WearDevice" id="WearDeviceResult">
        <result property="id"    column="id"    />
        <result property="itemCode"    column="item_code"    />
        <result property="itemName"    column="item_name"    />
        <result property="purpose"    column="purpose"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="spareWord1"    column="spare_word1"    />
        <result property="spareWord2"    column="spare_word2"    />
        <result property="spareWord3"    column="spare_word3"    />
    </resultMap>

    <resultMap type="com.iccm.system.model.SiteWorkerVo$WearDevice" id="SiteWorkerVoDeviceResult">
        <result property="wearDeviceId"    column="id"    />
        <result property="itemCode"    column="item_code"    />
        <result property="itemName"    column="item_name"    />
        <result property="orderNum"    column="order_num"    />
        <result property="spareWord1"    column="spare_word1"    />
    </resultMap>

    <select id="getSelectList" parameterType="Object" resultMap="SiteWorkerVoDeviceResult">
        SELECT id, item_code, item_name,spare_word1 FROM wear_device
        <where>
            <if test="itemCode != null  and itemCode != ''"> and item_code like concat('%', #{itemCode}, '%')</if>
            <if test="itemName != null  and itemName != ''"> and item_name like concat('%', #{itemName}, '%')</if>
            <if test="purpose != null  and purpose != ''"> and purpose = #{purpose}</if>
            <if test="spareWord1 != null  and spareWord1 != ''"> and spare_word1 = #{spareWord1}</if>
            <if test="spareWord2 != null  and spareWord2 != ''"> and spare_word2 = #{spareWord2}</if>
            <if test="spareWord3 != null  and spareWord3 != ''"> and spare_word3 = #{spareWord3}</if>
        </where>
        ORDER by item_code
    </select>

    <sql id="selectWearDeviceVo">
        select id, item_code, item_name, purpose, remark, create_by, create_time, update_by, update_time, spare_word1, spare_word2, spare_word3 from wear_device
    </sql>

    <select id="getRunningItemId" resultType="Object">
        SELECT
        DISTINCT
        item_code
        FROM
        site_worker
        WHERE
        work_id in(
        SELECT
         work_id
         FROM
         site_work
         WHERE
         work_status = 1
        )
    </select>

    <select id="selectWearDeviceList" parameterType="WearDevice" resultMap="WearDeviceResult">
        <include refid="selectWearDeviceVo"/>
        <where>  
            <if test="itemCode != null  and itemCode != ''"> and item_code like concat('%', #{itemCode}, '%')</if>
            <if test="itemName != null  and itemName != ''"> and item_name like concat('%', #{itemName}, '%')</if>
            <if test="purpose != null  and purpose != ''"> and purpose = #{purpose}</if>
            <if test="spareWord1 != null  and spareWord1 != ''"> and spare_word1 = #{spareWord1}</if>
            <if test="spareWord2 != null  and spareWord2 != ''"> and spare_word2 = #{spareWord2}</if>
            <if test="spareWord3 != null  and spareWord3 != ''"> and spare_word3 = #{spareWord3}</if>
        </where>
    </select>
    
    <select id="selectWearDeviceById" parameterType="Long" resultMap="WearDeviceResult">
        <include refid="selectWearDeviceVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertWearDevice" parameterType="WearDevice" useGeneratedKeys="true" keyProperty="id">
        insert into wear_device
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="itemCode != null  and itemCode != ''">item_code,</if>
            <if test="itemName != null  and itemName != ''">item_name,</if>
            <if test="purpose != null  and purpose != ''">purpose,</if>
            <if test="remark != null  and remark != ''">remark,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="updateBy != null  and updateBy != ''">update_by,</if>
            <if test="updateTime != null ">update_time,</if>
            <if test="spareWord1 != null  and spareWord1 != ''">spare_word1,</if>
            <if test="spareWord2 != null  and spareWord2 != ''">spare_word2,</if>
            <if test="spareWord3 != null  and spareWord3 != ''">spare_word3,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="itemCode != null  and itemCode != ''">#{itemCode},</if>
            <if test="itemName != null  and itemName != ''">#{itemName},</if>
            <if test="purpose != null  and purpose != ''">#{purpose},</if>
            <if test="remark != null  and remark != ''">#{remark},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null ">#{updateTime},</if>
            <if test="spareWord1 != null  and spareWord1 != ''">#{spareWord1},</if>
            <if test="spareWord2 != null  and spareWord2 != ''">#{spareWord2},</if>
            <if test="spareWord3 != null  and spareWord3 != ''">#{spareWord3},</if>
         </trim>
    </insert>

    <update id="updateWearDevice" parameterType="WearDevice">
        update wear_device
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemCode != null  and itemCode != ''">item_code = #{itemCode},</if>
            <if test="itemName != null  and itemName != ''">item_name = #{itemName},</if>
            <if test="purpose != null  and purpose != ''">purpose = #{purpose},</if>
            <if test="remark != null  and remark != ''">remark = #{remark},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
            <if test="spareWord1 != null  and spareWord1 != ''">spare_word1 = #{spareWord1},</if>
            <if test="spareWord2 != null  and spareWord2 != ''">spare_word2 = #{spareWord2},</if>
            <if test="spareWord3 != null  and spareWord3 != ''">spare_word3 = #{spareWord3},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWearDeviceById" parameterType="Long">
        delete from wear_device where id = #{id}
    </delete>

    <delete id="deleteWearDeviceByIds" parameterType="String">
        delete from wear_device where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>